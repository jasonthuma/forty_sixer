{
  "exclude": ["./coverage", "./dist", "./backend/src/__tests__", "./frontend"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./backend/build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "typeRoots": ["./backend/src/types"],
    "types": ["@types/jest", "jest", "node"]
  }
}
