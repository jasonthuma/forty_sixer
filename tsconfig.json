{
  "exclude": [
    "./coverage",
    "./dist",
    "jest.config.js",
    "__tests__",
    "./frontend"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./backend/build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "typeRoots": ["./backend/src/types"],
    "types": ["@types/jest", "jest", "node"]
  }
}
